generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String?
  mail         String        @unique
  password     String
  reservations Reservation[]
  messages Message[]
}

model Therapist {
  id      Int                 @id @default(autoincrement())
  name    String
  comment String?
  imageFileName String?
  menus   TherapistsOnMenus[]
  messages Message[]
}

model Message {
  id Int @id @default(autoincrement())
  therapistId Int
  therapist Therapist @relation(fields: [therapistId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
  message String?
  isUserSend Boolean? @default(false)
  isRead Boolean? @default(false)
  created DateTime @default(now())
}

model Menu {
  id         Int                 @id @default(autoincrement())
  name       String
  therapists TherapistsOnMenus[]
}

model TherapistsOnMenus {
  id            Int           @id @default(autoincrement())
  therapist     Therapist?    @relation(fields: [therapistId], references: [id])
  therapistId   Int?
  menu          Menu?         @relation(fields: [menuId], references: [id])
  menuId        Int?
  treatmentTime Int?
  price         Int?
  Reservation   Reservation[]

  @@index([therapistId, menuId])
}

model Reservation {
  id              Int               @id @default(autoincrement())
  user            User              @relation(fields: [userId], references: [id])
  userId          Int
  therapistMenu   TherapistsOnMenus @relation(fields: [therapistMenuId], references: [id])
  therapistMenuId Int
  startDt         DateTime          @default(now())
  created         DateTime          @default(now())

  @@index([userId, therapistMenuId])
}
